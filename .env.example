# Required
OPENROUTER_API_KEY=your_openrouter_api_key

# Local Model (LM Studio)
LM_STUDIO_API_URL=http://localhost:1234/v1
LM_STUDIO_MODEL=mistralai/ministral-3-14b-reasoning
ENABLE_TOOLS=true
ENABLE_VISION=true
LOCAL_AI_TEMPERATURE=0.2  # Lower = more consistent outputs (0.0-1.0)

# Remote Only Mode
REMOTE_ONLY_MODE=false  # Set to true to skip local AI and use remote AI directly

# Streaming & Retry Configuration
USE_STREAMING=true
AI_MAX_RETRIES=3
AI_RETRY_DELAY_SECONDS=1.0

# Remote AI Configuration
OPENROUTER_MODEL=x-ai/grok-4
REMOTE_AI_TEMPERATURE=0.2  # Lower = more consistent outputs (0.0-1.0)

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///trading.db

# Trading Configuration
TRADING_MODE=paper
IGNORE_MARKET_HOURS=false
CHECK_INTERVAL_SECONDS=300
INITIAL_BALANCE=10000
MAX_POSITIONS=5
MAX_POSITION_SIZE_PCT=0.20
